        <audio id="background-music" loop>
            <source src="1. Apollo - O que você sente？.mp3" type="audio/mpeg">
        </audio>

        <button id="audio-toggle" class="audio-control">
            <i class="fas fa-volume-up"></i>
        </button>

        <div class="container">
            <img src="4f15c01d5f8d6f67ef084430bbd7ed84.png" alt="Foto de Perfil" class="profile-pic">
            
<h1 class="name">Luy</h1>

            <div class="social-icons">
                <a href="https://www.roblox.com/pt/users/2712553626/profile" target="_blank" aria-label="Roblox">
                    <i class="fas fa-gamepad"></i>
                </a>
                
<a href="#" target="_blank" aria-label="Spotify">
